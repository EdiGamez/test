@Test
public void testJobCreation() {
    // Preparar mocks para construir un Job real
    JobBuilder jobBuilder = new JobBuilder("jobExtracTaylorReportDb");
    SimpleJobBuilder simpleJobBuilder = jobBuilder.start(mock(Step.class));

    when(jobBuilderFactory.get("jobExtracTaylorReportDb")).thenReturn(jobBuilder);
    when(jobBuilder.start(any(Step.class))).thenReturn(simpleJobBuilder);

    Job job = config.jobExtracFullRevalReportDb(jobBuilderFactory, tasklet, stepBuilderFactory);
    assertNotNull(job);
    assertEquals("jobExtracTaylorReportDb", job.getName());
}

@Test
public void testStepCreation() {
    StepBuilder stepBuilder = new StepBuilder("stepFrLoadDb");
    TaskletStepBuilder taskletStepBuilder = stepBuilder.tasklet(tasklet);
    taskletStepBuilder.listener(mock(StepExecutionListener.class));

    when(stepBuilderFactory.get("stepFrLoadDb")).thenReturn(stepBuilder);
    when(stepBuilder.tasklet(tasklet)).thenReturn(taskletStepBuilder);

    Step step = config.stepFrLoadDb(tasklet, stepBuilderFactory);
    assertNotNull(step);
    assertEquals("stepFrLoadDb", step.getName());
}
